<!DOCTYPE html>
<html>
	<head>
			<link rel="stylesheet" href="styles.css" />
	</head>
	<body>
		<!--NAV BAR-->
		<ul>
			<li><a class="active" href="#home">Home</a></li>
			<li><a href="#news">News</a></li>
			<li><a href="#contact">Contact</a></li>
			<li><a href="#about">About</a></li>
		</ul>

		<h3 id="toggle-big-red">Toggle Big Red</h3>
		<div id="big-red"></div>

		<script>
			const toggle = document.querySelector('#toggle-big-red');
			const bigRed = document.querySelector('#big-red');
			toggle.addEventListener('click', () => bigRed.style.display = (bigRed.style.display === 'none') ? 'block' : 'none');
		</script>
	</body>
</html>
